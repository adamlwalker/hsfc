<div class='container'>
  <div class='row'>
    <div class='col-md-9 col-sm-12 home-news'>
      <% @articles.each do |article| %>
        <div class="separator clearfix"></div>
        <div class="article">
          <div class="title"><%= cms_block_render('title', article) %></div>
          <div class="date"><%= cms_block_render('date', article) %></div>

          <p><%= cms_block_render('body', article) %></p>
        </div>
      <% end %>
    </div>
    <div class='col-md-3 col-sm-12'>
      <%= render 'events' %>
    </div>
  </div>
</div>
